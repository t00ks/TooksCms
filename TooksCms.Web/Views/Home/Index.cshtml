<!DOCTYPE html>

<html>
<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
    <title>Digital Ectoplasm</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/lh")

    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false">
    </script>
    <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4f7dbfb458d125e0"></script>
    <script>
        var addthis_share = {
            templates: {
                twitter: "{{title}} {{url}} (via @@tooksnet)"
            }
        }
    </script>

    @*Open graph tags*@
    <meta property="og:title" content="Digital Ectoplasm, Timothy Crittenden Blog" />
    <meta property="og:type" content="blog" />
    <meta property="og:url" content="http://www.dig-ec.co.uk" />
    <meta property="og:image" content="http://www.dig-ec.co.uk/Content/Images/Icons/icon_rss_32x32.png" />
    <meta property="og:site_name" content="Digital Ectoplasm, Timothy Crittenden Blog / PCRules.com Archive" />
    <meta property="fb:app_id" content="24962085042" />

    <meta name="fragment" content="!">
    <link href='http://fonts.googleapis.com/css?family=Lobster|Pacifico|Exo:400,500' rel='stylesheet' type='text/css'>
</head>
<body>
    <header id="flyout-container">
        <div class="topnavbar">
            <div class="navbar-inner" id="menu-flyout-host">
                @Html.Action("Menu", "Home", new { isFlyout = true })
            </div>
        </div>
    </header>
    <div id="peek">
        <img class="background-image" src="/content/images/tk-background-top.png" />
        <div id="sticky">
            <header id="site-header">
                <div class="topnavbar">
                    <div class="navbar-inner" id="menu-host">
                        @Html.Action("Menu", "Home")
                    </div>
                </div>
            </header>
        </div>
        <div id="scrollable">
            <div class="container-fluid" id="applicationHost"></div>
        </div>
    </div>
    <div id="login-form" class="white-popup mfp-hide">
        <div class="inner">
            <form id="signin-form" class="form" method="POST" action="@Url.Action("SignIn", "Account")">
                <div class="form-group">
                    <label for="menu-login-username">Username / Email:</label>
                    <input type="text" class="form-control" id="menu-login-username" name="UserName" placeholder="Enter Username / Email" />
                </div>
                <div class="form-group">
                    <label for="menu-login-password">Password:</label>
                    <input type="password" class="form-control" id="menu-login-password" name="Password" placeholder="Password" />
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="menu-login-persist" name="Persist" />Keep Me Logged In
                    </label>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Sign In</button>
            </form>
        </div>
    </div>
    <footer>
        <div class="stats">
            <span id="stat-users">
                Current Visitors <span id="online-users"></span>
            </span>
            <span id="stat-version">
                TooksCms @TooksCms.ServiceLayer.Utilities.StateManager.Version beta | &copy; Copyright Timothy Crittenden 2014. All rights reserved.
            </span>
            <span id="sitemap-link">
                <a href="/sitemap">Site Map</a>
            </span>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery",
                    "~/bundles/jqueryplugins",
                    "~/bundles/otherplugins")


    <script type="text/javascript" src="~/Scripts/lib/require.js" data-main="/App/main"></script>
    <script src="http://www.google.com/recaptcha/api/js/recaptcha_ajax.js" type="text/javascript"></script>
    <script src="https://www.youtube.com/iframe_api" type="text/javascript"></script>
</body>
</html>
